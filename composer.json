{
    "name": "josantonius/curl",
    "version": "1.1.4",
    "type": "library",
    "description": "API Requests using the HTTP protocol through the Curl library.",
    "keywords": [
        "Curl",
        "HTTP",
        "Rest",
        "Web service",
        "Client",
        "HTTP client",
        "PHP"
    ],
    "license": "MIT",
    "authors": [{
        "name": "Josantonius",
        "email": "hello@josantonius.com",
        "homepage": "https://josantonius.com",
        "role": "Developer"
    }],
    "support": {
        "issues": "https://github.com/josantonius/php-curl/issues",
        "forum": "http://stackoverflow.com/tags/josantonius/php-curl",
        "source": "https://github.com/josantonius/php-curl"
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Josantonius\\Curl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Josantonius\\Cookie\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit --colors=always;",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml $(find . -name '*.php');",
        "tests": "clear && vendor/bin/phpcs --standard=phpcs.ruleset.xml $(find . -name '*.php') && vendor/bin/phpunit --colors=always;"
    }
}